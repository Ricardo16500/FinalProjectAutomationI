<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Full Regression" verbose="1">

    <test name="Regression Test in Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="url" value="https://www.demoblaze.com"/>
        <parameter name="user" value="userTest123456"/>
        <parameter name="password" value="userTest123456"/>
        <packages>
            <package name="login"/>
            <package name="descriptionProduct"/>
            <package name="productIntoCart"/>
            <package name="purchase"/>
        </packages>
    </test>
    <test name="Regression Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="url" value="https://www.demoblaze.com"/>
        <parameter name="user" value="userTest123456"/>
        <parameter name="password" value="userTest123456"/>
        <packages>
            <package name="login"/>
            <package name="descriptionProduct"/>
            <package name="productIntoCart"/>
            <package name="purchase"/>
        </packages>
    </test>


</suite>